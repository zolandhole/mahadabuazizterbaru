<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_expanded_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/black"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_alignParentStart="true"
        android:contentDescription="@null"
        android:src="@drawable/logoabuaziz"
        android:layout_width="100dp"
        android:alpha="0.5"
        android:layout_height="100dp" />

    <TextView
        android:layout_marginTop="5dp"
       android:layout_centerVertical="true"
        android:id="@+id/tv_judul_kajian_notif"
        android:textAlignment="center"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="match_parent"
        android:fontFamily="@font/robotoboldcon"
        android:layout_height="wrap_content"
        android:text="@string/judul_kajian"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

    <TextView
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:fontFamily="@font/robotocondensed"
        android:textSize="12sp"
        android:layout_below="@+id/tv_judul_kajian_notif"
        android:id="@+id/tv_pemateri_notif"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nama_asatid" />
</RelativeLayout>