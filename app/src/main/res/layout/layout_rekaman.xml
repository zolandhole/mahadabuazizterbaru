<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_recycler"
    android:background="@drawable/back_putih"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:fontFamily="@font/robotolight"
        android:text="@string/_20_jan_2012_12_00"
        android:textSize="12sp"
        android:id="@+id/rekaman_jam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/separator"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/rekaman_jam"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_below="@id/separator"
        android:textSize="16sp"
        android:text="@string/judul_kajian"
        android:fontFamily="@font/robotobold"
        android:id="@+id/rekaman_judul_kajian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>
